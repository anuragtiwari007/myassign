<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "com.hibernate.main.Product" table = "Product">
             
      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>
      <property name = "productid" column = "productid" type = "int"/>
      <property name = "productname" column = "productname" type = "string"/>
      <property name = "productmodel" column = "productmodel" type = "string"/>
      <property name = "productprice" column = "productprice" type = "int"/>
      
   </class>
</hibernate-mapping>